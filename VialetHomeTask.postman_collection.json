		{
			"name": "CreateUser",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Generate a unique user for each run\r",
							"const rand = Math.floor(Math.random() * 1_000_000);\r",
							"\r",
							"pm.environment.set(\"email\", `testuser+${rand}@example.com`);\r",
							"pm.environment.set(\"password\", \"Test@1234\");\r",
							"pm.environment.set(\"phone\", `555000${rand}`);\r",
							"\r",
							"// Reset KYC stage at the beginning of the flow\r",
							"pm.environment.unset(\"kycStage\");"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200 or 201\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);\r",
							"});\r",
							"\r",
							"// Parse JSON\r",
							"let res;\r",
							"pm.test(\"Response is valid JSON\", function () {\r",
							"    res = pm.response.json();\r",
							"    pm.expect(res).to.be.an(\"object\");\r",
							"});\r",
							"\r",
							"// Wrapper checks\r",
							"pm.test(\"Success flag is true\", function () {\r",
							"    pm.expect(res.success).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"Message is present\", function () {\r",
							"    pm.expect(res.message).to.be.a(\"string\");\r",
							"});\r",
							"\r",
							"pm.test(\"Data object exists\", function () {\r",
							"    pm.expect(res.data).to.be.an(\"object\");\r",
							"});\r",
							"\r",
							"const data = res.data;\r",
							"\r",
							"// Data checks\r",
							"pm.test(\"userId exists\", function () {\r",
							"    pm.expect(data.userId, \"Missing userId\").to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Email matches request\", function () {\r",
							"    pm.expect(data.email).to.equal(pm.environment.get(\"email\"));\r",
							"});\r",
							"\r",
							"pm.test(\"Phone matches request\", function () {\r",
							"    pm.expect(data.phone).to.equal(pm.environment.get(\"phone\"));\r",
							"});\r",
							"\r",
							"pm.test(\"createdAt exists\", function () {\r",
							"    pm.expect(data.createdAt).to.be.a(\"string\");\r",
							"});\r",
							"\r",
							"// KYC-specific\r",
							"pm.test(\"Initial KYC status is no_documents\", function () {\r",
							"    pm.expect(data.kycStatus).to.equal(\"no_documents\");\r",
							"});\r",
							"\r",
							"pm.test(\"Initial kycVerifiedAt is null\", function () {\r",
							"    pm.expect(data.kycVerifiedAt).to.be.null;\r",
							"});\r",
							"\r",
							"// Save for next requests\r",
							"pm.environment.set(\"userId\", data.userId);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
