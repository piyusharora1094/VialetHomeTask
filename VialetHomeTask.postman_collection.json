		{
			"name": "GetKYCstatus",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(200);\r",
							"});\r",
							"\r",
							"const res = pm.response.json();\r",
							"\r",
							"pm.test(\"Success flag is true\", function () {\r",
							"    pm.expect(res.success).to.be.true;\r",
							"});\r",
							"\r",
							"pm.test(\"Data object exists\", function () {\r",
							"    pm.expect(res.data).to.be.an(\"object\");\r",
							"});\r",
							"\r",
							"const data = res.data;\r",
							"const status = data.kycStatus;\r",
							"\r",
							"console.log(\"Current KYC status:\", status);\r",
							"console.log(\"Full data:\", data);\r",
							"\r",
							"// 1) Allow for actual statuses your API uses\r",
							"const allowedStatuses = [\r",
							"    \"no_documents\",\r",
							"    \"documents_under_verification\",\r",
							"    \"documents_verified\", // keep if your API ever uses it\r",
							"    \"valid\"               // ✅ your actual \"verified\" state\r",
							"];\r",
							"\r",
							"pm.test(\"KYC status is valid\", function () {\r",
							"    pm.expect(status).to.be.oneOf(allowedStatuses);\r",
							"});\r",
							"\r",
							"// 2) 20-second rule:\r",
							"// Treat \"valid\" (and optionally \"documents_verified\") as the final verified state\r",
							"const finalVerifiedStatuses = [\"valid\", \"documents_verified\"];\r",
							"\r",
							"if (finalVerifiedStatuses.includes(status)) {\r",
							"    const uploadTimeStr = pm.environment.get(\"kycUploadTime\");\r",
							"\r",
							"    pm.test(\"Upload time is stored\", function () {\r",
							"        pm.expect(uploadTimeStr, \"kycUploadTime env var missing\").to.exist;\r",
							"    });\r",
							"\r",
							"    if (uploadTimeStr && data.kycVerifiedAt) {\r",
							"        const uploadTime = parseInt(uploadTimeStr, 10);          // ms since epoch (from Date.now)\r",
							"        const verifiedAtMs = Date.parse(data.kycVerifiedAt);     // ms from ISO string\r",
							"        const diffMs = verifiedAtMs - uploadTime;\r",
							"\r",
							"        console.log(\"Upload time (ms):\", uploadTime);\r",
							"        console.log(\"VerifiedAt (ms):\", verifiedAtMs);\r",
							"        console.log(\"Diff (ms):\", diffMs);\r",
							"\r",
							"        pm.test(\"Verification completed within 20 seconds\", function () {\r",
							"            // Allow up to 20,000 ms between upload and verification\r",
							"            pm.expect(diffMs).to.be.at.most(20000);\r",
							"        });\r",
							"    } else {\r",
							"        console.log(\"Missing kycUploadTime or kycVerifiedAt; cannot check 20-second rule.\");\r",
							"    }\r",
							"} else {\r",
							"    console.log(\"KYC not yet verified, current status:\", status);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
